<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/LinearLayout01"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:padding="10dip" android:orientation="vertical"
	android:background="@color/colorwhite">

	<EditText android:id="@+id/commentText" android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:inputType="textMultiLine"
		android:lines="4" />
	<Button android:id="@+id/writecommentButton" android:textSize="20dip"
		android:layout_marginTop="10dip" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/send"
		android:onClick="@string/writeCommentButtonHandler" />
</LinearLayout>
