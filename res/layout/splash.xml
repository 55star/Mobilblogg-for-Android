<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@color/colorwhite"
	android:padding="20dip">

	<ImageView android:src="@drawable/mobilblogglogo"
		android:layout_height="wrap_content" android:focusable="false"
		android:layout_width="wrap_content" android:layout_marginBottom="5dip"
		android:layout_gravity="center" android:layout_centerHorizontal="true" />

	<TextView android:id="@+id/TextView01" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/mobilbloggintro"
		android:textColor="@color/colorblack" android:textSize="16dip"
		android:layout_marginBottom="10dip" android:autoLink="web" />

	<TextView android:id="@+id/TextView02" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text=""
		android:textColor="@color/textcolor" android:textSize="14dip"
		android:layout_marginBottom="10dip" android:layout_gravity="center" />


	<Button android:id="@+id/Button01" android:layout_width="120dip"
		android:layout_height="wrap_content" android:text="@string/start"
		android:layout_centerHorizontal="true" android:onClick="@string/splashButtonHandler"
		android:layout_gravity="center" />

</LinearLayout>