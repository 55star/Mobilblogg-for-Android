<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/LinearLayout01"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:background="@color/colorbg">

	<Gallery xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/examplegallery" android:layout_width="fill_parent"
		android:layout_height="wrap_content" />

	<ScrollView android:id="@+id/scroll01" android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<LinearLayout android:id="@+id/LinearLayout02"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:orientation="vertical" android:padding="10dip">

			<TextView android:id="@+id/headline" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_weight="1"
				android:layout_gravity="center|top" android:textSize="20dip"
				android:text="" android:textStyle="bold" android:textColor="@color/textcolor" />
			<ImageView android:id="@+id/ImageView01"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal|top" android:scaleType="center" />

			<TextView android:id="@+id/date" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_gravity="left|top"
				android:textSize="12dip" android:textColor="@color/textcolor" />
			<TextView android:id="@+id/text" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_weight="1"
				android:layout_gravity="left|top" android:textSize="16dip"
				android:text="" android:textColor="@color/textcolor" />

			<LinearLayout android:id="@+id/LinearLayout03"
				android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:orientation="horizontal" android:gravity="center_horizontal" android:layout_marginTop="10dip">

				<Button android:id="@+id/bloggButton" 
					android:layout_height="wrap_content" android:layout_width="120dip"
					android:text="" android:onClick="@string/startPageButtonHandler"
					android:layout_marginRight="25dip" android:visibility="invisible" />
				<Button android:id="@+id/commentButton"
					android:layout_height="wrap_content" android:text="4"
					android:onClick="@string/startPageButtonHandler"
					android:layout_marginLeft="25dip" android:layout_width="120dip"
					android:visibility="invisible" />
			</LinearLayout>

		</LinearLayout>
	</ScrollView>
</LinearLayout>