<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_pressed="true">
		<shape>
			<gradient android:startColor="@color/colorwhite"
				android:endColor="@color/colorlightgray" android:angle="270" />
			<stroke android:width="1dp" android:color="@color/colorbutton" />
			<corners android:radius="3dp" />
			<padding android:left="5dp" android:top="5dp" android:right="5dp"
				android:bottom="5dp" />
			<margin android:left="10dp" android:top="10dp" android:right="10dp"
				android:bottom="10dp" />
		</shape>
	</item>

	<item android:state_focused="true">
		<shape>
			<gradient android:startColor="@color/colorwhite"
				android:endColor="@color/colorlightgray" android:angle="270" />
			<stroke android:width="1dp" android:color="@color/colorbutton" />

			<corners android:radius="3dp" />
			<padding android:left="5dp" android:top="5dp" android:right="5dp"
				android:bottom="5dp" />
			<margin android:left="10dp" android:top="10dp" android:right="10dp"
				android:bottom="10dp" />

		</shape>
	</item>

	<item>
		<shape>
			<gradient android:startColor="@color/colorwhite"
				android:endColor="@color/colorlightgray" android:angle="270" />

			<stroke android:width="1dp" android:color="@color/colordarkgray" />
			<corners android:radius="3dp" />
			<padding android:left="5dp" android:top="5dp" android:right="5dp"
				android:bottom="5dp" />
			<margin android:left="10dp" android:top="10dp" android:right="10dp"
				android:bottom="10dp" />
		</shape>
	</item>
</selector>
